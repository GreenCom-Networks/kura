<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.core.wire.timer.Timer" 
         name="Timer" 
         description="">

        <Icon resource="WireTimer" size="32"/>
                
        <AD id="name"
            name="name"
            type="String"
            cardinality="0"
            required="true"
            default="Timer 1"
            description="Name of the timer"/>
        
        <AD id="interval"
            name="interval"
            type="Integer"
            cardinality="0"
            required="true"
            default="10000"
            description="Interval of the timer ticks, in milliseconds"
            min="100"/>

    </OCD>
    
    <Designate pid="org.eclipse.kura.core.wire.timer.Timer" factoryPid="org.eclipse.kura.core.wire.timer.Timer">
        <Object ocdref="org.eclipse.kura.core.wire.timer.Timer"/>
    </Designate>
</MetaData>
