<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.core.data.store.DbDataRecordStore"
         name="DbDataRecordStore" 
         description="DbDataRecordStore provides storage for DataRecords produced by the DataEmitters.">

        <Icon resource="DataService" size="32"/>
        
        <AD id="emitter.id"  
            name="emitter.id"
            type="String"
            cardinality="0" 
            required="true"
            default="DbDataRecordStore"
            description="ID for the events emitted by this emitter."/>

        <AD id="data.emitters"
        	name="data.emitters"
        	type="String"
        	cardinality="0"
        	required="true"
        	default="aa"
        	description="Coma-separated list of DataEmitter's IDs this DbDataRecordStore will subscribe to">
        </AD>
    </OCD>
    
    <Designate pid="org.eclipse.kura.core.data.store.DbDataRecordStore">
        <Object ocdref="org.eclipse.kura.core.data.store.DbDataRecordStore"/>
    </Designate>
</MetaData>
